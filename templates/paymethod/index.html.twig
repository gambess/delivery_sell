{% extends 'base.html.twig' %}

{% block title %}Paymethod index{% endblock %}

{% block body %}
    <h1>Paymethod index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ShortName</th>
                <th>Name</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paymethod in paymethods %}
            <tr>
                <td>{{ paymethod.id }}</td>
                <td>{{ paymethod.shortName }}</td>
                <td>{{ paymethod.name }}</td>
                <td>{{ paymethod.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('paymethod_show', {'id': paymethod.id}) }}">show</a>
                    <a href="{{ path('paymethod_edit', {'id': paymethod.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('paymethod_new') }}">Create new</a>
{% endblock %}
