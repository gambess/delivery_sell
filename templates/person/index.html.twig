{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
    <h1>Person index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Name2</th>
                <th>Rsocial</th>
                <th>Giro</th>
                <th>Address1</th>
                <th>Referencia</th>
                <th>Phone1</th>
                <th>Email1</th>
                <th>IsActive</th>
                <th>Kind</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.name }}</td>
                <td>{{ person.name2 }}</td>
                <td>{{ person.rsocial }}</td>
                <td>{{ person.giro }}</td>
                <td>{{ person.address1 }}</td>
                <td>{{ person.referencia }}</td>
                <td>{{ person.phone1 }}</td>
                <td>{{ person.email1 }}</td>
                <td>{{ person.isActive }}</td>
                <td>{{ person.kind }}</td>
                <td>{{ person.createdAt ? person.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('person_show', {'id': person.id}) }}">show</a>
                    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('person_new') }}">Create new</a>
{% endblock %}
